{
  "steps": [
    {
      "name": "{{COMP_NAME}}",
      "hostRequirements": {
        "attributes": [
          {
            "name": "attr.worker.os.family",
            "anyOf": [
              "windows"
            ]
          }
        ]
      },
      "script": {
        "actions": {
          "onRun": {
            "command": "python",
            "args": [
              "{{Param.JobScriptDir}}/call_aerender.py",
              "--deadline-cloud",
              "--job_script_dir",
              "{{Param.JobScriptDir}}",
              "--project",
              "{{Param.ProjectFile}}",
              "--render_queue_index",
              "{{Param.RenderQueueIndex}}",
              "--output",
              "{{Param.OutputDir}}/{{Param.OutputFileName}}",
              "--frames",
              "{{Param.Frames}}",
              "--ignore_missing_dependencies",
              "{{Param.IgnoreMissingDependencies}}",
              "--concurrency",
              "{{Param.Concurrency}}",
              "--max_concurrency",
              "{{Param.MaxConcurrency}}",
              "--ram_per_process_gb",
              "{{Param.RamPerProcessGB}}",
              "--disable_affinity",
              "{{Param.DisableAffinity}}",
              "--spawn_delay",
              "{{Param.SpawnDelay}}",
              "--child_grace_sec",
              "{{Param.ChildGraceSec}}",
              "--no_kill_on_fail",
              "{{Param.NoKillOnFail}}",
              "--output_is_pattern",
              "{{Param.OutputIsPattern}}",
              "--aerender_path",
              "{{Param.AerenderPath}}",
              "--env_file",
              "{{Param.EnvFile}}",
              "--log_file",
              "{{Param.LogFile}}"
            ]
          }
        }
      }
    }
  ]
}