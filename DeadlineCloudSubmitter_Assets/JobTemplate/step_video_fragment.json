{
  "steps": [
    {
      "name": "{{COMP_NAME}}",
      "hostRequirements": {
        "attributes": [
          {
            "name": "attr.worker.os.family",
            "anyOf": [
              "windows",
              "macos"
            ]
          }
        ]
      },
      "script": {
        "actions": {
          "onRun": {
            "command": "python",
            "args": [
              "{{Param.JobScriptDir}}/call_aerender.py",
              "{{Param.ProjectFile}}",
              "{{Param.RenderQueueIndex}}",
              "{{Param.OutputDir}}/{{Param.OutputFileName}}",
              "{{Param.Frames}}",
              "--multi-frame-rendering",
              "{{Param.MultiFrameRendering}}",
              "--max-cpu-usage-percentage",
              "{{Param.MaxCpuUsagePercentage}}",
              "--ignore-missing-dependencies",
              "{{Param.IgnoreMissingDependencies}}",
              "--concurrency",
              "{{Param.Concurrency}}",
              "--max_concurrency",
              "{{Param.MaxConcurrency}}",
              "--ram_per_process_gb",
              "{{Param.RamPerProcessGB}}",
              "--mfr_threads",
              "{{Param.MfrThreads}}",
              "--disable_mfr",
              "{{Param.DisableMfr}}",
              "--numa_map",
              "{{Param.NumaMap}}",
              "--disable_affinity",
              "{{Param.DisableAffinity}}",
              "--spawn_delay",
              "{{Param.SpawnDelay}}",
              "--child_grace_sec",
              "{{Param.ChildGraceSec}}",
              "--no_kill_on_fail",
              "{{Param.NoKillOnFail}}",
              "--output_is_pattern",
              "{{Param.OutputIsPattern}}",
              "--aerender_path",
              "{{Param.AerenderPath}}",
              "--env_file",
              "{{Param.EnvFile}}",
              "--log_file",
              "{{Param.LogFile}}"
            ]
          }
        }
      }
    }
  ]
}